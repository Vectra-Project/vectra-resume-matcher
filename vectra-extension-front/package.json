{
  "name": "vectra-extension-front",
  "displayName": "Vectra",
  "version": "0.0.1",
  "description": "Vectra is a web-based application/extension  The goal of the application is to provide an efficient and automated system for matching job applicants' resumes/CVs with relevant job postings.",
  "author": "Vectra-Group ",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "16": "^0.0.2",
    "@clerk/clerk-js": "^5.5.3",
    "@clerk/clerk-react": "^5.2.2",
    "@plasmohq/selector": "^0.0.5",
    "dotenv": "^16.4.5",
    "mindee": "^4.11.0",
    "plasmo": "0.86.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "prettier": "3.2.4",
    "react-router-dom": "^6.23.0",
    "tailwindcss": "^3.4.3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "windows",
      "storage"
    ],
    "background": {
      "scripts": [
        "background.js",
        "content.tsx"
      ],
      "persistent": false
    }
  }
}
